<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorRateText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vibrantzz3.snipsearchadmin.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:navigationIcon="@drawable/backarrow3"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:id="@+id/rluser"
        android:layout_width="match_parent"
        android:layout_height="271dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="-56dp"
        android:background="@drawable/userbg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="190dp"
            android:layout_height="194dp"
            android:layout_centerInParent="true"
            android:src="@drawable/dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="13dp"
            android:src="@drawable/backarrow5" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="42dp"
            android:layout_marginEnd="95dp"
            android:src="@drawable/editpic" />


    </RelativeLayout>

    <TextView
        android:id="@+id/salonlogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rluser"
        android:layout_centerHorizontal="true"
        android:text="Add Salon Logo"
        android:textColor="@color/colorGrey"
        android:textSize="15dp" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/p1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:textColorHint="@color/colorGrey">

        <EditText
            android:id="@+id/input_businessname"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:hint="BUSINESS NAME"
            android:inputType="textEmailAddress"
            android:text="Book My Salon"
            android:textColor="@android:color/black"
            android:textColorHint="@color/colorGrey" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/p2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp"
        android:textColorHint="@color/colorGrey">

        <EditText
            android:id="@+id/input_phonenumber"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:hint="PHONE NUMBER"
            android:inputType="number"
            android:text="8585858585"
            android:textColor="@android:color/black"
            android:textColorHint="@color/colorGrey" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/p3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:textColorHint="@color/colorGrey">

        <EditText
            android:id="@+id/input_email"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:hint="EMAIL ID"
            android:inputType="textEmailAddress"
            android:text="test@vibrantzz.com"
            android:textColor="@android:color/black"
            android:textColorHint="@color/colorGrey" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/go"
        android:layout_width="132dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="120dp"
        android:onClick="GetEditfillform1"
        android:src="@drawable/save1" />




</RelativeLayout>



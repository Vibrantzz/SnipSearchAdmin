<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    app:cardBackgroundColor="@color/colorRateText"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/maincard"
    android:background="@color/colorRateText"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/myrv"
        android:layout_width="349dp"
        android:layout_height="47dp"
        android:background="@drawable/homebase2">

        <TextView
            android:id="@+id/txtname"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:fontFamily="@font/lato"
            android:paddingRight="12dp"
            android:text="Happy in the Head Hair Studio"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/favourate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:src="@drawable/star1" />

        <ImageView
            android:id="@+id/unfavourate"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/star2" />

        <ImageView
            android:id="@+id/deactive"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:src="@drawable/minus" />

        <ImageView
            android:id="@+id/active"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:src="@drawable/plus" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
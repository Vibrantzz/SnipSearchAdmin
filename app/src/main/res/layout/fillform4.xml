<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorRateText"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vibrantzz3.snipsearchadmin.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRateText"
        android:navigationIcon="@drawable/backarrow5"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="65dp"
        android:text="Select your business type.(select multiple)"
        android:textColor="@android:color/black"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/hairimg"
        android:layout_width="159dp"
        android:layout_height="146dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/hairr" />

    <ImageView
        android:id="@+id/hairimgpress"
        android:layout_width="159dp"
        android:layout_height="146dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:visibility="invisible"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/tick" />

    <TextView
        android:layout_below="@+id/hairimg"
        android:layout_marginLeft="80dp"
        android:textSize="18dp"
        android:textColor="@color/colorGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="HAIR"/>

    <ImageView
        android:id="@+id/acadmeyimg"
        android:layout_width="159dp"
        android:layout_height="146dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="250dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/academyy" />

    <ImageView
        android:id="@+id/acadmeyimgpress"
        android:layout_width="159dp"
        android:layout_height="146dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="250dp"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/tick" />

    <TextView
        android:layout_below="@+id/acadmeyimg"
        android:layout_marginLeft="230dp"
        android:textSize="18dp"
        android:textColor="@color/colorGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ACADMEY"/>

    <ImageView
        android:id="@+id/spaimg"
        android:layout_width="159dp"
        android:layout_height="146dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/spaa" />

    <ImageView
        android:id="@+id/spaimgpress"
        android:layout_width="159dp"
        android:layout_height="146dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp"
        android:visibility="invisible"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/tick" />

    <TextView
        android:layout_below="@+id/spaimg"
        android:layout_marginLeft="80dp"
        android:textSize="18dp"
        android:textColor="@color/colorGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="SPA"/>

    <ImageView
        android:id="@+id/beautyimg"
        android:layout_width="159dp"
        android:layout_height="146dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/beauti" />

    <ImageView
        android:id="@+id/beautyimgpress"
        android:layout_width="159dp"
        android:layout_height="146dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/tick" />

    <TextView
        android:layout_below="@+id/beautyimg"
        android:layout_marginLeft="240dp"
        android:textSize="18dp"
        android:textColor="@color/colorGrey"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="BEAUTY"/>

    <ImageView
        android:id="@+id/go"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="GetUpdatefillform4"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/next" />

    <ImageView
        android:layout_width="340dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ff5" />




</RelativeLayout>



<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRateText"
    android:orientation="vertical"
    tools:context="com.example.vibrantzz3.snipsearchadmin.AddOffer">


    <TextView
        android:id="@+id/cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="111dp"
        android:text="Categories"
        android:textColor="@color/colorGrey"
        android:textSize="18dp" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/cat"
        android:layout_marginStart="0dp"
        android:layout_toEndOf="@+id/cat"
        android:autofillHints="Cat"
        android:prompt="@string/spinner_title"
        android:theme="@style/AppTheme" />


    <TextView
        android:id="@+id/categoryselection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/cat"
        android:layout_marginTop="148dp"
        android:textSize="15dp"
        android:text="Your Selection"
        android:textColor="@color/colorBlack" />
    <!--<Spinner

        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_alignBottom="@+id/cat"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="44dp"
        android:theme="@style/AppTheme">

    </Spinner>-->


    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="293dp"
        android:textColorHint="@color/colorGrey">

        <EditText
            android:id="@+id/input_pincode"
            android:layout_width="283dp"
            android:layout_height="83dp"
            android:hint="Terms and Conditions"
            android:inputType="textLongMessage"
            android:textColor="@android:color/black"
            android:textColorHint="@color/colorGrey" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        android:textColorHint="@color/colorGrey">

        <EditText
            android:id="@+id/input_address"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:hint="Offer"
            android:inputType="textLongMessage"
            android:textColor="@android:color/black"
            android:textColorHint="@color/colorGrey" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="235dp"
        android:textColorHint="@color/colorGrey">

        <EditText
            android:id="@+id/input_city"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textColorHint="@color/colorGrey" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="392dp"
        android:textColorHint="@color/colorGrey">

        <EditText
            android:id="@+id/input_state"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:hint="Validity"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textColorHint="@color/colorGrey" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_done"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="44dp"
        android:background="@color/colorPrimary"
        android:onClick="GetUpdate"
        android:text="DONE"
        android:textColor="#FFF" />

</RelativeLayout>
